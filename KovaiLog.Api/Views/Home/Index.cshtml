<style>
    .content {
        margin-top: 20px
    }
    .panel-heading {
        position: relative;
    }
    .panel-heading span {
        position: absolute;
        right: 10px;
        top: 10px;
        font-size: 13px;
    }
    .type{
        margin-bottom: 10px;
    }
</style>
@{
    var data = (List<Content>)ViewData["Content"];
}
<div class="row content" style="margin-top: 20px">
    @for (var i = 0; i < data.Count; i++)
    {
        <div class="col-md-12 margin-bottom-30">
            <div class="panel @(ViewBag.PanelColor[data[i].ContentTypes.TypeColor])">
                <div class="panel-heading">
                    <h3 class="panel-title">@data[i].ContentTitle</h3>
                    <span>
                        @data[i].CreatedDate
                    </span>
                </div>
                <div class="panel-body">
                    <div class="type"><span class="label @(ViewBag.LabelColor[data[i].ContentTypes.TypeColor])">@data[i].ContentTypes.TypeName</span></div>
                    <p>@data[i].ContentDesc</p>
                </div>
            </div>
        </div>
    }

</div>
